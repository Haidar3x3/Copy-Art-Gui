-- Dynamic GUI/Notification Disabler (New Elements Only)
local Players = game:GetService("Players")
local CoreGui = game:GetService("CoreGui")
local LocalPlayer = Players.LocalPlayer
local PlayerGui = LocalPlayer:WaitForChild("PlayerGui")

-- Configuration
local DESTROY_INSTEAD_OF_HIDE = true -- Set to false to just hide elements
local SCAN_INTERVAL = 0.5 -- Seconds between scans for new GUIs

-- List to keep track of existing GUI elements
local existingElements = {}

-- Function to record all current GUI elements
local function recordExistingElements()
    for _, element in ipairs(PlayerGui:GetDescendants()) do
        existingElements[element] = true
    end
    for _, element in ipairs(CoreGui:GetDescendants()) do
        existingElements[element] = true
    end
end

-- Function to handle new GUI elements
local function handleNewElement(element)
    -- Skip if this is a known existing element
    if existingElements[element] then return end
    
    -- Mark as processed
    existingElements[element] = true
    
    -- Only process actual GUI objects
    if element:IsA("GuiObject") or element:IsA("TextLabel") or element:IsA("TextButton") then
        if DESTROY_INSTEAD_OF_HIDE then
            element:Destroy()
        else
            element.Visible = false
            if element:IsA("TextButton") or element:IsA("ImageButton") then
                element.Active = false
            end
        end
    end
end

-- Initial scan to record existing elements
recordExistingElements()

-- Set up continuous scanner
local function scanForNewElements()
    while true do
        wait(SCAN_INTERVAL)
        
        -- Check PlayerGui for new elements
        for _, element in ipairs(PlayerGui:GetDescendants()) do
            handleNewElement(element)
        end
        
        -- Check CoreGui for new elements
        for _, element in ipairs(CoreGui:GetDescendants()) do
            handleNewElement(element)
        end
    end
end

-- Start the scanner
spawn(scanForNewElements)

print("Active GUI monitor running - will disable only NEW interface elements")
